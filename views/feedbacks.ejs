<div class="container mt-5">
    <h1>Submitted Feedbacks</h1>
    <% if (feedbacks.length === 0) { %>
        <p>No feedbacks submitted yet.</p>
    <% } else { %>
        <% feedbacks.forEach((feedback, index) => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Feedback #<%= index + 1 %></h5>
                    <p class="card-text"><strong>Name:</strong> <%= feedback.fullname %></p>
                    <p class="card-text"><strong>Email:</strong> <%= feedback.email %></p>
                    <p class="card-text"><strong>Message:</strong> <%= feedback.message %></p>
                    <div class="mt-3">
                        <a href="/edit-feedback/<%= feedback.id %>" class="btn btn-secondary">Edit</a>
                        <form action="/delete-feedback/<%= feedback.id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this feedback?')">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } %>
</div>

